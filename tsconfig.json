{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/seed/seed.ts",
    "src/generated/**/*.ts",
    "src/generated/**/*.js"
  ],
  "exclude": ["node_modules", "dist"]
}